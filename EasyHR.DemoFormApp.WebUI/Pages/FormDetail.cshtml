@page
@model FormDetailModel
@{
    ViewData["Title"] = "Form Detayı";
    Layout = "_AdminLayout";
}

@if (Model.FormDetail != null)
{
    <div class="bg-white rounded-3 shadow-sm p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1"><i class="bi bi-file-earmark-text"></i> Form Detayı</h2>
            </div>
            <div>
                @if (Model.FormDetail.IsDeleted)
                {
                    <a asp-page="/DeletedForms" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Geri
                    </a>
                }
                else
                {
                    <a asp-page="/Forms" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Geri
                    </a>
                }
            </div>
        </div>
    </div>

    @if (Model.FormDetail.IsDeleted)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Bu form silinmiştir.</strong>
            Silme tarihi: @Model.FormDetail.DeletedAt?.ToString("dd.MM.yyyy HH:mm")
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Kişisel Bilgiler</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3 pb-3 border-bottom">
                        <div class="col-4">
                            <strong class="text-muted">Ad:</strong>
                        </div>
                        <div class="col-8">
                            <span class="h5 mb-0">@Model.FormDetail.FirstName</span>
                        </div>
                    </div>

                    <div class="row mb-3 pb-3 border-bottom">
                        <div class="col-4">
                            <strong class="text-muted">Soyad:</strong>
                        </div>
                        <div class="col-8">
                            <span class="h5 mb-0">@Model.FormDetail.LastName</span>
                        </div>
                    </div>

                    <div class="row mb-3 pb-3 border-bottom">
                        <div class="col-4">
                            <strong class="text-muted">Email:</strong>
                        </div>
                        <div class="col-8">
                            <a href="mailto:@Model.FormDetail.Email" class="text-decoration-none">
                                <i class="bi bi-envelope"></i> @Model.FormDetail.Email
                            </a>
                        </div>
                    </div>

                    <div class="row mb-0">
                        <div class="col-4">
                            <strong class="text-muted">Doğum Tarihi:</strong>
                        </div>
                        <div class="col-8">
                            <span class="badge bg-info fs-6">
                                <i class="bi bi-calendar"></i>
                                @Model.FormDetail.BirthDate.ToString("dd.MM.yyyy")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="bi bi-clock-history"></i> Zaman Bilgileri</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Oluşturulma Tarihi</small>
                        <strong>@Model.FormDetail.CreatedAt.ToString("dd.MM.yyyy HH:mm")</strong>
                    </div>

                    @if (Model.FormDetail.UpdatedAt != null)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block">Son Güncelleme</small>
                            <strong>@Model.FormDetail.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</strong>
                        </div>
                    }

                    @if (Model.FormDetail.DeletedAt.HasValue)
                    {
                        <div class="mb-0">
                            <small class="text-muted d-block">Silinme Tarihi</small>
                            <strong class="text-danger">
                                @Model.FormDetail.DeletedAt.Value.ToString("dd.MM.yyyy HH:mm")
                            </strong>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-gear"></i> Form ID</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted d-block mb-2">Benzersiz Kimlik</small>
                    <code class="d-block p-2 bg-light rounded small">@Model.FormDetail.Id</code>
                </div>
            </div>
        </div>
    </div>
}