<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <div class="d-flex">     
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-primary vh-100 position-fixed" style="width: 280px;">
            <div class="border-bottom border-white border-opacity-25 pb-3 mb-3">
                <h4 class="mb-1"><i class="bi bi-shield-lock"></i> Admin Panel</h4>
                <small class="text-white-50">Form Yönetimi</small>
            </div>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="/Dashboard"
                       class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Dashboard" ? "active" : "")"
                       aria-current="page">
                        <i class="bi bi-speedometer2 me-2"></i>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="/Forms"
                       class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Forms" ? "active" : "")">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Aktif Formlar
                    </a>
                </li>
                <li>
                    <a href="/DeletedForms"
                       class="nav-link text-white @(ViewContext.RouteData.Values["Page"]?.ToString() == "/DeletedForms" ? "active" : "")">
                        <i class="bi bi-trash me-2"></i>
                        Silinen Formlar
                    </a>
                </li>
            </ul>

            <div class="border-top border-white border-opacity-25 pt-3">
                <a href="/" class="d-flex align-items-center text-white text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>
                    Ana Sayfaya Dön
                </a>
            </div>
        </div>
  
        <div class="flex-grow-1 p-4" style="margin-left: 280px;">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>