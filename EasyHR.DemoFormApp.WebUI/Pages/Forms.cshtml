@page
@model FormsModel
@{
    ViewData["Title"] = "Aktif Formlar";
    Layout = "_AdminLayout";
}

<div class="bg-white rounded-3 shadow-sm p-4 mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1"><i class="bi bi-file-earmark-text"></i> Aktif Formlar</h2>
            <p class="text-muted mb-0">Sistemdeki tüm aktif formlar</p>
        </div>
        <a asp-page="/CreateForm" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Form
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Forms.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="bi bi-person"></i> Ad Soyad</th>
                            <th><i class="bi bi-calendar"></i> Doğum Tarihi</th>
                            <th><i class="bi bi-clock"></i> Oluşturulma</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var form in Model.Forms)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-primary rounded-circle p-2 me-3" style="width: 40px; height: 40px;">
                                            <span class="fs-5">@form.FullName.Substring(0, 1).ToUpper()</span>
                                        </span>
                                        <strong>@form.FullName</strong>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @form.BirthDate.ToString("dd.MM.yyyy")
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @form.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="/FormDetail"
                                           asp-route-id="@form.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                onclick="setDeleteData('@form.Id', '@form.FullName')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light text-muted">
            Toplam <strong>@Model.Forms.Count</strong> aktif form bulunmaktadır.
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm text-center p-5">
        <div class="card-body">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h4 class="mt-3">Henüz aktif form bulunmuyor</h4>
            <p class="text-muted">Yeni form oluşturmak için butona tıklayın</p>
            <a asp-page="/CreateForm" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> İlk Formu Oluştur
            </a>
        </div>
    </div>
}

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Form Silme Onayı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong id="formNameToDelete"></strong> adlı formu silmek istediğinize emin misiniz?</p>
                <p class="text-muted mb-0">
                    <i class="bi bi-info-circle"></i> Bu işlem geri alınabilir. Form çöp kutusuna taşınacaktır.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form method="post" class="d-inline">
                    <input type="hidden" name="id" id="formIdToDelete" />
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setDeleteData(formId, formName) {
            document.getElementById('formIdToDelete').value = formId;
            document.getElementById('formNameToDelete').textContent = formName;
        }
    </script>
}